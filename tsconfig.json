
{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src*"],
      "@shared/*": ["shared/*"]
    },
    "jsx": "react-jsx"
  },
  "include": ["server/**/*.ts", "client/**/*.ts", "shared/**/*.ts"],
  "exclude": ["node_modules"]
}
